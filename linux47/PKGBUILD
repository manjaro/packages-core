pkgbase=linux47
pkgname=('linux47' 'linux47-headers')
_kernelname=-MANJARO
_basekernel=4.7
_basever=47
_aufs=20160530
_bfq=v7r11
_rc=rc1
pkgver=${_basekernel}${_rc}
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
source=(#"https://www.kernel.org/pub/linux/kernel/v4.x/linux-${_basekernel}.tar.xz"
