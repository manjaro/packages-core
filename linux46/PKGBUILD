pkgbase=linux46
pkgname=('linux46' 'linux46-headers')
_kernelname=-MANJARO
_basekernel=4.6
_basever=46
_aufs=20160509
_bfq=v7r11
_rc=rc7
pkgver=${_basekernel}${_rc}
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
