pkgname=('linux44' 'linux44-headers')
_kernelname=-MANJARO
_basekernel=4.4
_basever=44
_aufs=20160530
_bfq=v7r11
_rtpatchver=rt19
pkgver=${_basekernel}.12
pkgrel=1
arch=('i686' 'x86_64')
url="http://www.kernel.org/"
license=('GPL2')
makedepends=('xmlto' 'docbook-xsl' 'kmod' 'inetutils' 'bc')
options=('!strip')
